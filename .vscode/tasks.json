{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Run C++ with input/output",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}",
        "&&",
        ".\\${fileBasenameNoExtension}.exe",
        "<",
        "input.txt",
        ">",
        "output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
